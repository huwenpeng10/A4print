<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_margin="6dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_print_shop_image"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/image_place_holder"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_print_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CardView"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/item_print_shop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="heheda" />
            <TextView
                android:id="@+id/item_print_printinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="黑白单面 0.1元 \n黑白双面 0.1元"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:layout_width="16dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/red_heart"
                    android:id="@+id/item_print_zan" />
                <TextView
                    android:id="@+id/item_print_tv_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="34"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/item_print_zan"
                    android:layout_toEndOf="@+id/item_print_zan" />
                <LinearLayout
                    android:id="@+id/item_print_shop_select_this_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_below="@+id/item_print_tv_zan"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:text="选这家"
                    android:textColor="@color/btn_blue_normal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:id="@+id/textView" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
        </LinearLayout>

</android.support.v7.widget.CardView>
